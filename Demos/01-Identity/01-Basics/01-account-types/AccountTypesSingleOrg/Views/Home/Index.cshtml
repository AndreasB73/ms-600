@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h3 class="display-4">Account Types and Claims</h3>
    @if (User.Identity.IsAuthenticated)
    {
        <div>
            <table cellpadding="2" cellspacing="2">
                <tr>
                    <th>Claim</th>
                    <th>Value</th>
                </tr>
                @foreach (var claim in User.Claims)
                {
                    <tr>
                        <td>@claim.Type</td>
                        <td>@claim.Value</td>
                    </tr>
                }
            </table>
        </div>
    }
</div>
